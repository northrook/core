{
  "name": "northrook/core",
  "description": "Core support functions.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Northrook\\Core\\": ""
    },
    "files": [
      "functions.php"
    ]
  },
  "authors": [
    {
      "name": "Martin",
      "email": "mn@northrook.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "ext-mbstring": "*",
    "symfony/var-exporter": "@stable",
    "symfony/stopwatch": "^7.1",
    "ext-zend-opcache": "*",
    "northrook/logger": "dev-main"
  },
  "require-dev": {
    "symfony/deprecation-contracts": "@stable",
    "symfony/var-dumper": "@stable",
    "symfony/error-handler": "@stable",
    "northrook/dev-env": "dev-main",
    "symfony/finder": "^7.1"
  }
}
