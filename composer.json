{
  "name": "northrook/core",
  "description": "Core support functions.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Northrook\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Acme\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Martin",
      "email": "mn@northrook.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3",
    "northrook/support": "dev-main",
    "northrook/logger": "dev-main",
    "northrook/filesystem": "dev-main",
    "northrook/memo": "dev-main"
  },
  "require-dev": {
    "northrook/dev-env": "dev-main",
    "phpbench/phpbench": "@stable"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse"
  }
}
